{
  "Name": "Aruk Language Method - Turkish",
  "Principle": "🌱 İlk kural saygı ve sevgidir.",
  "Purpose": "ALM yapısının tüm dillere uygulanabilmesini sağlamak ve Türkçe öğrenimini kolaylaştırmak.",
  "Philosophy": [
    "Önce anla, hemen kullan",
    "Asla sadece ezberleme",
    "Kural ezberi yok, yalnızca kullanım",
    "Bağlam her şeydir"
  ],
  "AI":"Created with AI,mistakes can be happen",
  "QuestionsBeforeStart": [
    "Neden Türkçe öğrenmek istiyorum?",
    "Motivasyonum ne?",
    "Her gün ne kadar zaman ayırabilirim?"
  ],
  "Information": "Önce dilin mantığını öğren ve adımları uygula.",
  "Concepts": [
    "Agglutinative = Ekler art arda ve düzenli şekilde eklenir (ek yığılması)",
    "Cinsiyet yok = Gramerde dişi/erkek ayrımı yok",
    "Makale yok = 'a/an/the' gibi artikeller yok",
    "Temel diziliş SOV = Özne + Nesne + Yüklem (fiil sonda); vurguya göre esnek",
    "Ünlü uyumu = Ekler kökün ünlüsüne göre değişir (kalın/ince ve dar/geniş uyum)",
    "Soru eki = '-mi/-mı/-mu/-mü' kelimeden ayrı yazılır ve vurgu öğesini izler",
    "Olumsuzluk = Fiilde '-ma/-me' olumsuzluk eki (değil ile isim cümlesi olumsuzlanır)",
    "Zaman-kişi ekleri = Zaman, kip ve kişi fiil sonuna eklerle gelir",
    "Durum ekleri = -i (belirtme), -e (yönelme), -de (bulunma), -den (ayrılma), -in (tamlayan)"
  ],
  "Contents": [
    "Ek mantığı ve ünlü uyumu",
    "SOV sırası ve vurguya göre yer değiştirme",
    "Zamanlar, kipler ve kişi ekleri",
    "Olumsuzluk ve soru yapısı",
    "Yaygın ilgeç/edinçler (postpositions) ve durum ekleri",
    "Doğrudan kullanım ve kalıp örnekler"
  ],

  "LanguageTypes": {
    "Agglutinative": {
      "Examples": ["Turkish", "Finnish", "Japanese"],
      "SuffixLogic": "Ekler art arda, düzenli ve şeffaf biçimde eklenir"
    }
  },

  "TurkishBasics": {
    "HasArticles": false,
    "PluralSuffix": ["-lar", "-ler"],
    "Gender": "none",
    "SubjectSeparation": {
      "Singular": ["ben", "sen", "o"],
      "Plural": ["biz", "siz", "onlar"]
    },
    "CaseEndings": {
      "Accusative": "-(y)i/-(y)ı/-(y)u/-(y)ü",
      "Dative": "-(y)e/-(y)a",
      "Locative": "-de/-da/-te/-ta",
      "Ablative": "-den/-dan/-ten/-tan",
      "Genitive": "-in/-ın/-un/-ün",
      "Instrumental_Comitative": "ile (~ -la/-le)"
    }
  },

  "Pronouns": {
    "Subject": ["ben", "sen", "o", "biz", "siz", "onlar"],
    "ObjectNote": "Nesne biçimi ayrı bir zamirden çok belirtme hâli ekiyle ifade edilir (beni, seni, onu, vb.).",
    "ObjectExamples": ["beni", "seni", "onu", "bizi", "sizi", "onları"],
    "PossessiveAdjectives": ["benim", "senin", "onun", "bizim", "sizin", "onların"],
    "PossessivePronouns": ["benimki", "seninki", "onunki", "bizimki", "sizinki", "onlarınki"],
    "Examples": [
      "Bu benim kitabım.",
      "Onu gördüm.",
      "Bu seninki mi?"
    ]
  },

  "AuxiliaryVerbsAndCopula": {
    "ZeroCopula": {
      "Description": "Şimdiki zamanda isim cümlelerinde 'to be' ek-fiili çoğu kez düşer.",
      "Examples": ["Ben öğrenciyim.", "O doktor.", "Biz hazırım(ız)."]
    },
    "Değil": {
      "Description": "İsim cümlelerini olumsuzlar.",
      "Examples": ["Ben öğrenci değilim.", "Bu doğru değil."]
    },
    "Var_Yok": {
      "Description": "Varlık-yokluk bildirir.",
      "Examples": ["Sende kalem var mı?", "Bugün zaman yok."]
    },
    "Olmak": {
      "Description": "Olma/olgunlaşma ve bazı birleşik yapılar için kullanılır.",
      "Examples": ["Mutlu oldum.", "Öğretmen olmak istiyorum."]
    }
  },

  "PersonalCoreWords": {
    "Instruction": "Günlük hayatta en sık kullandığın fiil ve zarfları belirle, Türkçe karşılıklarını ve örnek cümlelerini yaz.",
    "ExampleFromLearner": {
      "Turkish": {
        "Verbs": ["istemek", "bilmek", "yapmak", "gitmek", "konuşmak"],
        "Adverbs": ["çok", "hemen", "belki", "asla", "yavaşça"]
