  "StatusStatements": {
    "Positive": ["Evet", "Kesinlikle", "Elbette", "Tabii"],
    "Negative": ["Hayır", "Asla", "Hiçbir şekilde"],
    "Uncertain": ["Belki", "Sanırım", "Duruma göre"],
    "Examples": [
      "Evet, sana yardım edebilirim.",
      "Hayır, kahveyi sevmem.",
      "Belki yarın gideriz."
    ]
  },

  "IFS_All": {
    "StateCopula": {
      "Description": "İsim cümleleri (ek-fiil), var/yok ve değil.",
      "Words": ["(ek-fiil)", "var", "yok", "değil"],
      "Examples": [
        "Ben hazırım.",
        "Bugün ders yok.",
        "Bu doğru değil."
      ]
    },
    "ModalsAndKip": {
      "Description": "Yeterlilik, gereklilik, istek, niyet vb. eklerle ifade edilir.",
      "Patterns": [
        "-(y)ebil (yeterlilik): Gidebilirim.",
        "-malı/-meli (gereklilik): Çalışmalıyım.",
        "-se/-sa (koşul): Gelirse konuşuruz.",
        "-(y)ecek (gelecek niyet): Yarın arayacağım.",
        "-(A)r (geniş zaman alışkanlık): Her gün yürürüm."
      ]
    },
    "Negation": {
      "Description": "Fiillerde -ma/-me olumsuzluk eki zaman ve kişi ekinden önce gelir.",
      "Examples": [
        "Gitmiyorum.",
        "Anlamadım.",
        "Söylemeyecekler."
      ]
    },
    "QuestionParticle": {
      "Description": "Soru eki '-mi/-mı/-mu/-mü' ayrı yazılır, vurgu yapılan öğeyi izler.",
      "Examples": [
        "Hazır mısın?",
        "Sen de geliyor musun?",
        "Bugün mü gidiyoruz?"
      ]
    },
    "TensesBasic": {
      "PresentContinuous": "-(I)yor: Geliyorum, yapıyor.",
      "Aorist_Habitual": "-(A)r/-ir: Giderim, sever.",
      "Past_Defined": "-di/-dı: Geldim, yaptı.",
      "Past_Evidential": "-miş/-mış: Gelmiş, yapmış(ım).",
      "Future": "-(y)acak/-ecek: Gelecek, yapacağım."
    }
  },

  "CreatingSentence": {
    "ExampleFromTurkish": "Özne + Nesne + Yüklem (SOV) — fiil sonda",
    "ExampleDescription": "Ben (Özne) + kahveyi (Nesne) + istiyorum (Yüklem).",
    "ImportantRules": [
      "SOV temel diziliştir; vurguya göre öğeler öne alınabilir.",
      "Özne çoğu zaman düşebilir: 'Kahve istiyorum.'",
      "Olumsuzluk '-ma/-me' zaman ve kişi ekinden önce: 'Gitmiyorum.'",
      "Soru eki ayrı yazılır ve odak öğeyi izler: 'Bugün mü gidiyoruz?'"
    ],
    "SuffixOrder_Simplified": "Kök + (Olumsuzluk) + (Yeterlilik vb.) + (Zaman/Kip) + (Kişi)",
    "Examples": [
      "Geliyorum (gel-iyor-um).",
      "Gelmeyeceksin (gel-me-yecek-sin).",
      "Gelebilir miyiz? (gel-e-bil-ir miy-iz?)"
    ]
  },

